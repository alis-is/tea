{
	"name": "TEA dev container",
	"dockerFile": "Dockerfile",
	"runArgs": ["--init"],
	"mounts": [ "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind" ],
	"overrideCommand": false,
	
	// Use this environment variable if you need to bind mount your local source code into a new container.
	"remoteEnv": {
		"LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}",
		"WORKSPACE_FOLDER": "/workspaces/tea"
	},

	// Configure tool-specific properties.
	"customizations": {
		// Configure properties specific to VS Code.
		"vscode": {	
			// Add the IDs of extensions you want installed when the container is created.
			"extensions": [
				"sumneko.lua",
				"ligolang-publish.ligo-vscode"
			],
			"settings": {
				"ligoLanguageServer.ligoBinaryPath": "ligo"
			}
		}
	},
	
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// Sandbox is exposed by default no need to expose its ports here
	// "forwardPorts": [],

	"postCreateCommand": "ami setup && ln -s /workspaces/tea/__tea/bin/ligo /usr/sbin/ligo && cd web && npm install"
}
